<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.com.control.activitys.MainActivity">


    <FrameLayout
         android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8a8a8a"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="51dp"/>
    <LinearLayout
        android:background="#ffffff"
        android:id="@+id/thememenu"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/homelayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home_img"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:src="@drawable/home"/>
            <TextView
                android:id="@+id/home_tv"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:text="首页"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/designlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/design_img"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:src="@drawable/design1"/>
            <TextView
                android:id="@+id/design_tv"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:text="设计"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/marketlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/market_img"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:src="@drawable/market"/>
            <TextView
                android:id="@+id/market_tv"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:text="市场"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/melayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/me_img"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:src="@drawable/me"/>
            <TextView
                android:id="@+id/me_tv"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:text="我的"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
